# open a new terminal -> it's leaving a lot of unusable open windows
# cmd - return :  open -na iTerm

# change window focus within space
cmd - k : yabai -m window --focus south
cmd - i : yabai -m window --focus north
cmd - j : yabai -m window --focus west
cmd - l : yabai -m window --focus east

# maximize a window
ctrl + shift - f : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + shift - e : yabai -m space --balance

# swap windows
ctrl + alt + cmd - k : yabai -m window --swap south
ctrl + alt + cmd - i : yabai -m window --swap north
ctrl + alt + cmd - j : yabai -m window --swap west
ctrl + alt + cmd - l : yabai -m window --swap east

# move window and split
ctrl + cmd - k : yabai -m window --warp south
ctrl + cmd - i : yabai -m window --warp north
ctrl + cmd - j : yabai -m window --warp west
ctrl + cmd - l : yabai -m window --warp east

#move window to prev and next space
fn + cmd - p : yabai -m window --space prev;
fn + cmd - n : yabai -m window --space next;

# move window to space #
shift + cmd - 1 : yabai -m window --space 1;
shift + cmd - 2 : yabai -m window --space 2;
shift + cmd - 3 : yabai -m window --space 3;
shift + cmd - 4 : yabai -m window --space 4;
shift + cmd - 5 : yabai -m window --space 5;
shift + cmd - 6 : yabai -m window --space 6;
shift + cmd - 7 : yabai -m window --space 7;
shift + cmd - 8 : yabai -m window --space 8;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
